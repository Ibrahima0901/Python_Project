//creaation fichier jenkins
pipeline {
agent any
stages {
stage('Recuperation de notre repository sur github') {
steps {
git branch: 'main', url: 'https://github.com/Ibrahima0901/Python_Project.git'
}
}
stage('Install Dependencies') {
steps {
bat'python -m venv venv'
}
}
2
stage('Run Script') {
steps {
bat'.\\venv/bin\\python app.py'
}
}
}
post {
success {
emailext subject: " Build SUCCESS: ${env.JOB_NAME}
#${env.BUILD_NUMBER}",
body: "Le build de ${env.JOB_NAME} a réussi.\nConsultez les logs ici:
${env.BUILD_URL}",
recipientProviders: [[$class: 'DevelopersRecipientProvider']],
to: 'iboug670@gmail.com '
}
failure {
emailext subject: " Build FAILURE: ${env.JOB_NAME}
#${env.BUILD_NUMBER}",
body: "Le build de ${env.JOB_NAME} a échoué.\nConsultez les logs ici:
${env.BUILD_URL}",
recipientProviders: [[$class: 'DevelopersRecipientProvider']],
to: 'iboug670@gmail.com'
}
}
}
